{
  "name": "webext-detect-page",
  "version": "1.0.0",
  "description": "Detects where the current browser extension code is being run. Compatibile with Firefox, Chrome and derivates.",
  "license": "MIT",
  "repository": "bfred-it/webext-detect-page",
  "author": "Federico Brigante <github@bfred.it> (bfred.it)",
  "keywords": [
    "background page",
    "content script",
    "options page",
    "browser",
    "extension",
    "detect",
    "is",
    "where",
    "webext",
    "web-ext",
    "chrome",
    "firefox"
  ],
  "files": [
    "index.js",
    "index.d.ts",
    "module/index.js"
  ],
  "module": "module/index.js",
  "scripts": {
    "test": "xo && tsc",
    "prepublish-only": "npm run build --silent",
    "build": "tsc && tsc --module es2015 --outDir module --declaration false",
    "watch": "tsc --watch"
  },
  "xo": {
    "extensions": [
      "ts"
    ],
    "envs": [
      "browser",
      "webextensions"
    ],
    "overrides": [
      {
        "files": "**/*.ts",
        "extends": "xo-typescript",
        "rules": {
          "@typescript-eslint/camelcase": 0
        }
      }
    ]
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^0.3.0",
    "@types/chrome": "0.0.86",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.11.0",
    "eslint-config-xo-typescript": "^0.12.0",
    "typescript": "^3.5.0",
    "xo": "*"
  }
}
